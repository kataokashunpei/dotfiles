function cdp {
	local dir="$( ls -1d */ | peco )"
	if [ ! -z "$dir" ] ; then
		cd "$dir"
	fi
}
function agvim () {
	vim $(ag $@ | peco --query "$LBUFFER" | awk -F : '{print "-c " $2 " " $1}')
}

function c(){
	pbcopy && echo "Copy to Clipboard!"
}

function g(){
	echo 'Pull from remote..'
	git pull origin master
	git add -A || return
	if [ ! $1 ]; then
		git commit -a -m 'add and change files(no comment)'
	else
		git commit -a -m $1
	fi
	echo 'Push to remote...'
	git push origin master
}

function a()
{
	g++ $1 -Wall -O2
	if [ $? -eq 0 ]; then
		echo -e '\e[32m [Build Success] \e[m'
		./a.out
	fi
}

#terminalのバーのタイトルを変更
function title()
{

if [ "$#" -eq 0 ];then
	  echo "usage tl name "
else
	    echo -en "\033];$1\007"
    fi
}

function localope () {
    local dir=`pwd`
    cd $local
    vagrant "${1:-status}"
    cd $dir
}

function vu(){
	cd $local
	vagrant up &&  vagrant ssh
}


function mk(){
	if [ "${1##*.}" = "cpp" ]; then
		echo "#include <iostream>\nusing namespace std;\nint main(){\n\n}">$1
	else
		:>$1
	fi
}

function fshow(){
	defaults write com.apple.finder AppleShowAllFiles TRUE && killall Finder
}
function fhide(){
	defaults write com.apple.finder AppleShowAllFiles FALSE && killall Finder
}

