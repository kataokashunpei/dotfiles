# git utility
function g(){
	echo -e '\n\e[34m[RUN]\e[mPull from remote...' && git pull origin master
	echo -e '\n\e[34m[RUN]\e[madd and commit '
	git add -A
	if [ ! $1 ]; then
		git commit -a -m 'add and change files(no comment)'
	else
		git commit -a -m $1
	fi
	echo -e '\n\e[34m[RUN]\e[mPush to remote...' && git push origin master
}

# to run a C++ program
function a()
{
	g++ $1 -std=c++11 -Wall -O2
	if [ $? -eq 0 ]; then
		echo -e '\e[32m [Build Success] \e[m'
		./a.out
	fi
}

